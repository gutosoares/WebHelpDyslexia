{
    "manifest_version": 2,
    "name": "WebHelpDyslexia",
    "version": "0.0.3",
    "description": "Ferramentas para facilitar a leitura de textos na web",

    "background":{
        "scripts":[
                "js/background/background.js",
                "js/background/open.js"
                ]
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],

        "css":[
            "css/spectrum.css",
            "css/style.css",
            "css/tipsy.css",
            "css/hint.css"
        ],

        "js": [
            "js/libs/jquery.js",
            "js/libs/jquery.injectCSS.js",
            "js/webHelpDyslexia.js",
            "js/widget.js",
            "js/widget-ui.js",
            "js/libs/jquery.tipsy.js",
            "js/libs/spectrum.js",
            "js/style.js",
			"js/events.js"

        ],

        "run_at": "document_start",
        "all_frames": true
      }
    ],

    "browser_action":{
        "default_icon":"images/icon16.png"
    },

    "icons": {
      "16":   "images/icon16.png",
      "48":   "images/icon48.png",
      "128":  "images/icon128.png"
    },

    "web_accessible_resources": [
      "css/fonts/arial.ttf",
      "css/fonts/comic-sans.ttf",
      "css/fonts/georgia.ttf",
      "css/fonts/open-dyslexic.ttf",
      "css/fonts/tahoma.ttf",
      "css/fonts/trebuchet.ttf",
      "css/fonts/verdana.ttf",
      "icons/highlight.svg",
      "icons/erase.svg",
      "icons/ruler.svg",
      "icons/book.svg",
      "icons/letter-spacing.svg",
      "icons/undo.svg",
      "icons/column-width.svg",
      "icons/line-spacing.svg",
      "icons/paragraph-spacing.svg",
      "icons/paragraph-left.svg",
      "icons/backgorund-color.svg",
      "icons/font-color.svg",
      "icons/remove-italic.svg",
      "icons/remove-bold.svg",
      "icons/text-height.svg",
      "icons/font.svg"
    ],

    "permissions" : [
      "tabs",
      "http://*/*",
      "<all_urls>",
      "https://*/*",
	  "http://localhost:65025/*",
	  "http://localhost:59862/*",
	  "http://localhost:59862/api/values",
	  "http://dicionario.azurewebsites.net/*",
	  "http://dicionario.azurewebsites.net/api/values"
  ]

}